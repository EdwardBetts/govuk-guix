#!/bin/sh

export GUIX_PACKAGE_PATH="$PWD/.guix-package-path${GUIX_PACKAGE_PATH:+:}$GUIX_PACKAGE_PATH"

guix environment \
     --fallback \
     --pure \
     --ad-hoc bash coreutils less nss-certs guix@0.11.0-gds guile \
     bash -- <<EOF
export GDS_GUIX_PATH="$GDS_GUIX_PATH"
export SSL_CERT_DIR="$GUIX_ENVIRONMENT/etc/ssl/certs"

bash ./pre-inst-env $@
EOF
