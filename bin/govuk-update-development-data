#!/bin/sh

set -e
set -o pipefail

if [ ! -n "$BASH" ] ; then
    exec bash "$0" $@
fi

if [ "$1" != "--no-download" ]; then
    govuk download-backups
fi

TWO_WEEKS_AGO="$(date --date="2 weeks ago" '+%d/%m/%Y')"

DATA_DIRECTORY_WITH_INDEX="$(govuk data build-data-directory-with-index --after=$TWO_WEEKS_AGO | tail -n1)"

govuk aws --profile govuk-test -- s3 sync --delete "$DATA_DIRECTORY_WITH_INDEX" s3://govuk-development-data-test/
